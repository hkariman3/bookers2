<main>
 <p id = "notice"></p>
 <div class = "container px-5 px-sm-0">
  <div class ="row">
   <div class = "col-md-3">
  <%= render'users/userinfo',user: @user %>
  <%= render'infocreate',book: @book %>
   </div>
   <div class = "col-md-8 offset-md-1">
 <h2>Book detail</h2>
 <table class="table table-striped">
  <tbody>
    <tr>
     <td> <%= link_to user_path(@user) do %>
     <%= image_tag @books.user.get_profile_image(100,100) %><br>
     <%= @books.user.name %>
          <% end %>
     </td>
      <td><%= @books.title %></td>
      <td><%= @books.body %></td>
      <% if @user.id == current_user.id %>
      <td><%= link_to'Edit', edit_book_path(@books), class:"btn btn-sm btn-success" %></td>
      <td><%= link_to'Destroy', book_path(@books), class:"btn btn-sm btn-danger", method: :delete,  data: {confirm: "本当に消しますか？"} %></td>
      <% else %>
      <td></td>
      <td></td>
      <% end %>
    </tr>
  </tbody>
 </table>
  </div>
  </div>
 </div>
</main>